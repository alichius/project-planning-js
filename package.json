{
  "name": "@fschopp/project-planning-js",
  "version": "1.0.1-SNAPSHOT",
  "description": "Algorithm for project planning. More precisely, *list scheduling* with support for machines running at different speeds, optional preemption, optional splitting of jobs across machines, release dates, and delivery times.",
  "keywords": [
    "project",
    "planning",
    "scheduling",
    "related machines",
    "uniform machines"
  ],
  "author": "Florian Schoppmann <mail@florian-schoppmann.net> (https://florian-schoppmann.net)",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/scheduling.js",
  "module": "dist/es6/scheduling.js",
  "types": "dist/es6/scheduling.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fschopp/project-planning-js.git"
  },
  "homepage": "https://github.com/fschopp/project-planning-js",
  "bugs": {
    "url": "https://github.com/fschopp/project-planning-js/issues"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/ target/",
    "lint": "tslint --format verbose --project .",
    "test": "jest",
    "test:coverage": "npm run test -- --collect-coverage",
    "compile": "tsc && rollup -c && cp target/js/*.d.ts dist/es6/",
    "doc": "typedoc",
    "demo": "parcel serve --cache-dir target/parcel-cache --out-dir target/demo --public-url /project-planning-js/demo/ src/demo/index.html",
    "demo:build": "parcel build --cache-dir target/parcel-cache --out-dir target/demo --public-url /project-planning-js/demo/ src/demo/index.html",
    "package": "npm run clean && npm run lint && npm run test:coverage && npm run compile && npm run doc && npm run demo:build && .scripts/gh_pages.sh"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "node-interval-tree": "^1.3.3",
    "parcel-bundler": "^1.12.3",
    "rollup": "^1.11.3",
    "rollup-plugin-strip": "^1.2.1",
    "rollup-plugin-terser": "^4.0.4",
    "svg.js": "^2.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "coverageDirectory": "target/coverage",
    "testMatch": [
      "**/src/spec/**/*.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
